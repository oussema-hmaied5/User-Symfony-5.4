{% extends 'admin_back/baseback.html.twig' %}

{% block title %}
    Logement index
{% endblock %}

{% block body %}
    <div class="container">
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <h1 class="mt-4 mb-4 text-center">Logement Index Back Office</h1>

        <div class="row">
            <div class="col">
                <link
                        rel="shortcut icon" type="image/png" href="{{ asset('assets/images/logos/favicon.png') }}">
                <!-- Update CSS path -->
                <link rel="stylesheet" href="{{ asset('assets/css/styles.min.css') }}">
                {% block stylesheets %}
                    {{ encore_entry_link_tags('app') }}
                {% endblock %}

                {% if users|length > 0 %}
                <table class="table table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">nom</th>
                        <th scope="col">prenom</th>
                        <th scope="col">email</th>
                        <th scope="col">password</th>
                        <th scope="col">sexe</th>
                        <th scope="col">role</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.nom  }}</td>
                            <td>{{ user.prenom  }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.password }}</td>
                            <td>{{ user.sexe }}</td>
                            <td>{{ user.role }}</td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>








    </div>